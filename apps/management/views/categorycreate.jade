extends ../../../views/management/managementlayout
block js
	link(rel='stylesheet', href='/stylesheets/jquery-te-1.4.0.css')
	link(rel='stylesheet', href='/stylesheets/bootstrap-tagsinput.css')
	script(type='text/javascript', src='/javascripts/bootstrap-tagsinput.min.js')

block content
	.row
		.col-md-8
			ol.breadcrumb
				li
					a(href="/Management/Post/Index") Kategoriler >
					a(href="#")  Kategori Oluştur
			form(role='form',action='/Management/Category/New', method='post')	
				table.table
					tr
						td Kategori Adı:
						td
							input.form-control(type="text",name='category[name]')
					tr
						td
						td
							input.btn.btn-primary.btn-block(type="submit",value="Ekle")
			-if(error && error[0]=='success')
				.alert.alert-success
					p.error= error[1]
			else if(error && error[0]=='warning')
				.alert.alert-warning
					p.error= error[1]