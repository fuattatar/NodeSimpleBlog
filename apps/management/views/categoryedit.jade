extends ../../../views/management/managementlayout
block js
	link(rel='stylesheet', href='/stylesheets/jquery-te-1.4.0.css')
	script(type='text/javascript', src='/javascripts/jquery-te-1.4.0.min.js')
block content
	.row
		.col-md-8
			ol.breadcrumb
				li
					a(href="/Management/Category/Index") Kategoriler >
					a(href="#")  Kategori Düzenle
			form(role='form',action='/Management/Category/Edit/'+category._id, method='post')	
				table.table
					tr
						td İsim:
						td
							input.form-control(type="text",name='category[name]',value=category.name)
					tr
						td
						td
							input.btn.btn-primary.btn-block(type="submit",value="GÜNCELLE")
			-if(error && error[0]=='success')
				.alert.alert-success
					p.error= error[1]
			else if(error && error[0]=='warning')
				.alert.alert-warning
					p.error= error[1]